<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:id="@+id/menu">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:touchscreenBlocksFocus="false"
        android:baselineAligned="false"
        android:id="@+id/menu1"
        android:background="#ffec068d">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/menu_edit_name"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학생"
            android:id="@+id/menu_text_studentname"
            android:textSize="60px"
            android:singleLine="false"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/menu_button_MENU"
            android:src="@drawable/menu"
            android:background="#ffec068d"
            android:layout_marginLeft="90dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical" />/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#338d8d8d"
        android:id="@+id/menu_layout">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:id="@+id/menu_button_talk"
            android:src="@drawable/talk"
            android:scaleType="fitCenter"
            android:background="#ffe8e8e8"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:id="@+id/menu_button_alarm"
            android:src="@drawable/alarm"
            android:scaleType="fitCenter"
            android:background="#ffe8e8e8"
            android:focusableInTouchMode="false"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ffe8e8e8"
        android:layout_marginBottom="100dp"
        android:weightSum="3">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/menu_button_finder"
            android:src="@drawable/finder"
            android:scaleType="fitCenter"
            android:background="#ffe8e8e8"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/menu_mbutton_list"
            android:src="@drawable/list"
            android:scaleType="fitCenter"
            android:background="#ffe8e8e8"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/menu_button_pay"
            android:src="@drawable/pay"
            android:scaleType="fitCenter"
            android:background="#ffe8e8e8"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="이용약관  ㅣ  개인정보취급방침"
        android:id="@+id/menu_textview1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="STUDY+"
        android:id="@+id/menu_textview2"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
