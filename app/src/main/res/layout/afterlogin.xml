<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:id="@+id/afterlogin_mainlayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/afterlogin_layout"
        android:background="#ffec068d"
        android:layout_marginBottom="40dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/afterlogin_button_menu"
            android:src="@drawable/menu"
            android:background="#ffec068d"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/afterlogin_edit_name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_marginLeft="70dp"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학생"
            android:id="@+id/afterlogin_text_studentname"
            android:textSize="40sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:singleLine="false"
            android:textColor="#ff000000" />

    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/afterlogin_imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        바른독서실\n           11번석\n20150513 - 20150612\n"
        android:id="@+id/afterlogin_text"
        android:textSize="20dp"
        android:textColor="#ff000000"
        android:layout_gravity="center_horizontal"
        android:singleLine="false"
        android:textAlignment="center" />

</LinearLayout>
