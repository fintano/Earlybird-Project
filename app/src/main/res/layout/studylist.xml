<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffec068d"
        android:id="@+id/study_list2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="열공 내역"
            android:id="@+id/textView"
            android:textColor="#ffffffff"
            android:textSize="35sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dp"
            android:textIsSelectable="false"
            android:textStyle="bold" />
    </LinearLayout>

    <DatePicker
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:amPmBackgroundColor="#ffffffff"
        android:background="#ffffffff"
        android:orientation="vertical"
        android:spinnersShown="false"
        android:layout_gravity="center"
        android:calendarViewShown="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015.05.13 오전 10시 28분 입실\n2015.05.13 오후 12시 03분 퇴실\n2015.05.13 오후 1시 22분 입실\n2015.05.13 오후 4시 34분 퇴실"
        android:id="@+id/studylist_info"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ff000000"
        android:visibility="invisible" />


</LinearLayout>
