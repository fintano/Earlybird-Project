<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:id="@+id/afterlogin_layout">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/studyplus_logo"
        android:scaleType="fitStart"
        android:src="@drawable/logo"
        android:background="#FFFFFFFF"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:weightSum="5.0"
        android:baselineAligned="false"
        android:background="#33ff614f">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_search_btn"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/search_white"
            android:baselineAlignBottom="false"
            android:background="#33ff614f" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_talk_btn"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:baselineAlignBottom="false"
            android:src="@drawable/talk_white"
            android:cropToPadding="false"
            android:background="#33ff614f" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_alarm_btn"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/alarm_white"
            android:background="#33ff614f" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_study_btn"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/study_white"
            android:background="#33ff614f" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_pay_btn"
            android:scaleType="fitCenter"
            android:layout_weight="1.0"
            android:src="@drawable/pay_white"
            android:adjustViewBounds="false"
            android:background="#33ff614f"
            android:focusableInTouchMode="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/afterlogin_edit_name"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_marginLeft="50dp"
            android:textColor="#ff000000"
            android:textSize="40sp"
            android:layout_weight="0.67"
            android:gravity="center" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:id="@+id/afterlogin_imageView_barcode"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        선택독서실\n           11번석\n20150513 - 20150612"
        android:id="@+id/afterlogin_text"
        android:textSize="20dp"
        android:textColor="#ff000000"
        android:layout_gravity="center_horizontal"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="이용약관  ㅣ  개인정보취급방침"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="STUDY+"
            android:id="@+id/textView8"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
