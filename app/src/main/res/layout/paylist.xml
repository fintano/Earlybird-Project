<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:weightSum="1">



    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffec068d"
    android:id="@+id/pay_list2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="납부 내역"
            android:id="@+id/paylist_text_title"
            android:textColor="#ffffffff"
            android:textSize="35sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dp"
            android:textIsSelectable="false"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="1월"
            android:id="@+id/paylist_button_1"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="2월"
            android:id="@+id/paylist_button_2"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="3월"
            android:id="@+id/paylist_button_3"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="4월"
            android:id="@+id/paylist_button_4"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="5월"
            android:id="@+id/paylist_button_5"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="6월"
            android:id="@+id/paylist_button_6"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="7월"
            android:id="@+id/paylist_button_7"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="8월"
            android:id="@+id/paylist_button_8"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="9월"
            android:id="@+id/paylist_button_9"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="10월"
            android:id="@+id/paylist_button_10"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="11월"
            android:id="@+id/paylist_button_11"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="12월"
            android:id="@+id/paylist_button_12"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#ffffeaf5"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

    </LinearLayout>

    <TextView
        android:layout_width="342dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:id="@+id/paylist_text"
        android:layout_gravity="right" />

</LinearLayout>