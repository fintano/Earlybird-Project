<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/alarm"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffec068d"
        android:id="@+id/alarm1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람 등록"
            android:id="@+id/textView"
            android:textColor="#ffffffff"
            android:textSize="35sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dp"
            android:textIsSelectable="false"
            android:textStyle="bold" />
    </LinearLayout>

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:clickable="false"
        android:amPmBackgroundColor="#ffffffff"
        android:background="#ffffffff"
        android:timePickerMode="spinner"
        android:nestedScrollingEnabled="true"
        android:numbersBackgroundColor="#ffffffff"
        android:numbersSelectorColor="#ff000000"
        android:numbersTextColor="#ff000000"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="false"
        android:layoutMode="opticalBounds"
        android:layout_gravity="center"
        android:amPmTextColor="#d870ff69"
        android:alpha="50"
        android:outlineProvider="bounds"
        android:paddingTop="50dp"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="30dp"
        android:id="@+id/alarm_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/textView2"
            android:text="쉴 땐 쉬고 할 땐 하자!\n시간을 설정하시면 깨워드립니다."
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp" />

    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="등록하기"
        android:id="@+id/alarm_button_register"
        android:background="#ffec068d"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="25dp"
        android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp" />

</LinearLayout>
